<root>
	<toolinterface
		id="egret1"
		name="Egret"
		version="2013-03-08"
		contact="Tobias.Denkinger@mailbox.tu-dresden.de"
		category="Language Models::Parsing">
		
		<description>Tools related to the Egret Parser.</description>
		
		<tool
			type="Shell"
			id="egret"
			name="Egret"
			version="2013-03-08"
			contact="Tobias.Denkinger@mailbox.tu-dresden.de"
			category="Language Models::Parsing">
			
			<description><![CDATA[Egret parser. Corpus must <em>not</em> contain empty lines]]>.</description>
	
			<in name="corpus" type="SentenceCorpus" />
			<in name="grammar" type="LAPCFG-Grammar" />
			<out name="trees" type="PennTreeCorpus" />
		</tool>
		
		<tool
			type="Shell"
			id="egretnbest"
			name="Egret n-best"
			version="2013-03-08"
			contact="Tobias.Denkinger@mailbox.tu-dresden.de"
			category="Language Models::Parsing">
			
			<description>Computes n best trees for the sentences in the corpus.</description>
	
			<in name="corpus" type="SentenceCorpus" />
			<in name="n" type="Integer" />
			<in name="grammar" type="LAPCFG-Grammar" />
			<out name="trees" type="PennTreeCorpus" />
		</tool>
		
		<tool
			type="Shell"
			id="egretnbestforest"
			name="Egret n-best forest"
			version="2013-03-12"
			contact="Tobias.Denkinger@mailbox.tu-dresden.de"
			category="Language Models::Parsing">
			
			<description>Computes the forest of n best trees for every sentence in the corpus.</description>
	
			<in name="corpus" type="SentenceCorpus" />
			<in name="n" type="Integer" />
			<in name="grammar" type="LAPCFG-Grammar" />
			<out name="pcfgs" type="PCFGs" />
		</tool>
		
	</toolinterface>
</root>

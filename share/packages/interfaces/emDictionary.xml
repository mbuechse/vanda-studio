			<in name="threshold" type="Double" />
			<in name="english corpus" type="SentenceCorpus" />
			<in name="french corpus" type="SentenceCorpus" />
			<out name="dictionary" type="Dictionary" />
			<out name="em steps" type="EMSteps" />
		</tool>
	</toolinterface>

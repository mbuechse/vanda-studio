		<description>Tools related to the EM Dictionary.</description>

		<tool
			type="Shell"
			id="EMDictionary"
			name="EM Dictionary"
			version="2014-10-08"
			contact="Matthias.Buechse@tu-dresden.de"
			category="Translation Models::Training">
			
